{% extends 'layout.html.twig' %}

{# Keywords from meta 'keyword' #}
{% block keywords %}homepage, media, client, rest-client{% endblock %}

{# Title of the page present on head markup #}
{% block title %}Homepage{% endblock %}

{# Body of the page #}
{% block content %}
    <section class="col-md-12 col-sm-12 col-xs-12">
        <h2>List of {{ media_type|capitalize|replace({'-' : ' '}) }}</h2>

        {# Display media #}
        {% if medias|length > 0 %}
            <table class="table table-striped table-hover">
                {% for m in medias %}
                    <tr>
                        <td>{{ m.title }}</td>
                        <td><a href="{{ path('media', {'id' : m.id, 'media' : media_type}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                    </tr>
                {% endfor %}
            </table>

            <ul class="pagination">
                {% if pagination.active == 0 %}
                    <li><span class="glyphicon glyphicon-chevron-left"></span></li>
                {% else %}
                    <li>
                        <a href="{{ path('media-list', {'media' : media_type, 'pagination' : pagination.active - 1}) }}">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                    </li>
                {% endif %}

                {% for p in 0..pagination.size %}
                    {% if pagination.active == p %}
                        <li class="active">
                    {% else %}
                        <li>
                    {% endif %}
                        <a href="{{ path('media-list', {'media' : media_type, 'pagination' : p}) }}">{{ p + 1 }}</a>
                    </li>
                {% endfor %}

                {% if pagination.active == pagination.size %}
                    <li><span class="glyphicon glyphicon-chevron-right"></span></li>
                {% else %}
                    <li>
                        <a href="{{ path('media-list', {'media' : media_type, 'pagination' : pagination.active + 1}) }}">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        {% else %}
            <p>No {{ media_type|capitalize|replace({'-' : ' '}) }} found.</p>
        {% endif %}
    </section>
{% endblock %}
