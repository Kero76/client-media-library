{% extends "layout.html.twig" %}

{# Keywords from meta 'keyword' #}
{% block keywords %}homepage, media, client, rest-client{% endblock %}

{# Title of the page present on head markup #}
{% block title %}{% trans %}homepage{% endtrans %}{% endblock %}

{# Body of the page #}
{% block content %}
<section class="col-md-12 col-sm-12 col-xs-12">
    <div>
        <ul class="nav nav-tabs nav-justified">
            <li class="active">
                <a href="#videos" data-toggle="tab" title="Videos">
                    <i class="fa fa-fw fa-film" aria-hidden="true"></i>
                </a></li>
            <li>
                <a href="#books" data-toggle="tab" title="Books">
                    <i class="fa fa-fw fa-book" aria-hidden="true"></i>
                </a>
            </li>
            <li>
                <a href="#musics-games" data-toggle="tab" title="Musics/Games">
                    <i class="fa fa-fw fa-music" aria-hidden="true"></i> /
                    <i class="fa fa-fw fa-gamepad" aria-hidden="true"></i>
                </a>
            </li>
        </ul>
    </div>

    <div class="tab-content">
        <section class="tab-pane fade in active" id="videos">
            <div class="row">
                {# Cartoons article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}cartoons{% endtrans %}</h2>
                    {% if cartoons|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for c in cartoons %}
                                <tr>
                                    <td class="col-md-6 col-sm-6 col-xs-6">{{ c.title }}</td>
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : c.id, 'media' : 'cartoons'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_cartoons_found{% endtrans %}.</p>
                    {% endif %}
                </article>

                {# Movie article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}movies{% endtrans %}</h2>
                    {% if movies|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for m in movies %}
                                <tr>
                                    <td class="col-md-6 col-sm-6 col-xs-6">{{ m.title }}</td>
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : m.id, 'media' : 'movies'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_movies_found{% endtrans %}.</p>
                    {% endif %}
                </article>
            </div>

            <div class="row">
                {# Anime article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}animes{% endtrans %}</h2>
                    {% if animes|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for a in animes %}
                                <tr>
                                    {% if a.numberOfSeasons == 1 %}
                                        <td class="col-md-6 col-sm-6 col-xs-6">{{ a.title }}</td>
                                    {% else %}
                                        <td class="col-md-6 col-sm-6 col-xs-6">{{ a.title }} - Season {{ a.currentSeason }}</td>
                                    {% endif %}
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : a.id, 'media' : 'animes'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_animes_found{% endtrans %}.</p>
                    {% endif %}
                </article>

                {# Series article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}series{% endtrans %}</h2>
                    {% if series|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for s in series %}
                                <tr>
                                    {% if s.numberOfSeasons == 1 %}
                                        <td class="col-md-6 col-sm-6 col-xs-6">{{ s.title }}</td>
                                    {% else %}
                                        <td class="col-md-6 col-sm-6 col-xs-6">{{ s.title }} - Season {{ s.currentSeason }}</td>
                                    {% endif %}
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : s.id, 'media' : 'series'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_series_found{% endtrans %}.</p>
                    {% endif %}
                </article>
            </div>
        </section>

        <section class="tab-pane fade" id="books">
            <div class="row">
                {# Books article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}books{% endtrans %}</h2>
                    {% if books|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for b in books %}
                                <tr>
                                    <td class="col-md-6 col-sm-6 col-xs-6">{{ b.title }}</td>
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : b.id, 'media' : 'books'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_books_found{% endtrans %}.</p>
                    {% endif %}
                </article>

                {# Comics article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}comics{% endtrans %}</h2>
                    {% if comics|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for c in comics %}
                                <tr>
                                    <td class="col-md-6 col-sm-6 col-xs-6">{{ c.title }}</td>
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : c.id, 'media' : 'comics'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_comics_found{% endtrans %}.</p>
                    {% endif %}
                </article>
            </div>
        </section>

        <section class="tab-pane fade" id="musics-games">
            <div class="row">
                {# Musics article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}musics{% endtrans %}</h2>
                    {% if musics|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for m in musics %}
                                <tr>
                                    <td class="col-md-6 col-sm-6 col-xs-6">{{ m.title }}</td>
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : m.id, 'media' : 'musics'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_musics_found{% endtrans %}.</p>
                    {% endif %}
                </article>

                {# Video games article #}
                <article class="col-md-6 col-sm-12 col-xs-12">
                    <h2>{% trans %}last{% endtrans %} {% trans %}video_games{% endtrans %}</h2>
                    {% if video_games|length > 0 %}
                        <table class="table table-striped table-hover">
                            {% for v in video_games %}
                                <tr>
                                    <td class="col-md-6 col-sm-6 col-xs-6">{{ v.title }}</td>
                                    <td class="col-md-offset-1 col-md-1 col-sm-offset-1 col-sm-1 col-xs-offset-1 col-xs-1">
                                        <a href="{{ path('media', {'id' : v.id, 'media' : 'video-games'}) }}" >
                                            <button role="link" class="btn btn-primary btn-sm" value="Read more ...">{% trans %}more_information{% endtrans %}</button>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% else %}
                        <p>{% trans %}no_video_games_found{% endtrans %}.</p>
                    {% endif %}
                </article>
            </div>
        </section>
    </div>
</section>
{% endblock %}
