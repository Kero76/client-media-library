{% extends "layout.html.twig" %}

{# Keywords from meta 'keyword' #}
{% block keywords %}homepage, media, client, rest-client{% endblock %}

{# Title of the page present on head markup #}
{% block title %}Homepage{% endblock %}

{# Body of the page #}
{% block content %}
<section class="col-md-12 col-sm-12 col-xs-12">
    <section id="videos">
        <div class="row">
            {# Cartoons article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Cartoons</h2>
                {% if cartoons|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for c in cartoons %}
                            <tr>
                                <td>{{ c.title }}</td>
                                <td><a href="{{ path('media', {'id' : c.id, 'media' : 'cartoons'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No cartoons found.</p>
                {% endif %}
            </article>

            {# Movie article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Movies</h2>
                {% if movies|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for m in movies %}
                            <tr>
                                <td>{{ m.title }}</td>
                                <td><a href="{{ path('media', {'id' : m.id, 'media' : 'movies'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No movies found.</p>
                {% endif %}
            </article>
        </div>

        <div class="row">
            {# Anime article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Animes</h2>
                {% if animes|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for a in animes %}
                            <tr>
                                {% if a.numberOfSeasons == 1 %}
                                    <td>{{ a.title }}</td>
                                {% else %}
                                    <td>{{ a.title }} - Season {{ a.currentSeason }}</td>
                                {% endif %}
                                <td><a href="{{ path('media', {'id' : a.id, 'media' : 'animes'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No animes found.</p>
                {% endif %}
            </article>

            {# Series article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Series</h2>
                {% if series|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for s in series %}
                            <tr>
                                {% if s.numberOfSeasons == 1 %}
                                    <td>{{ s.title }}</td>
                                {% else %}
                                    <td>{{ s.title }} - Season {{ s.currentSeason }}</td>
                                {% endif %}
                                <td><a href="{{ path('media', {'id' : s.id, 'media' : 'series'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No series found.</p>
                {% endif %}
            </article>
        </div>
    </section>

    <section id="books">
        <div class="row">
            {# Books article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Books</h2>
                {% if books|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for b in books %}
                            <tr>
                                <td>{{ b.title }}</td>
                                <td><a href="{{ path('media', {'id' : b.id, 'media' : 'books'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No books found.</p>
                {% endif %}
            </article>

            {# Comics article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Comics</h2>
                {% if comics|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for c in comics %}
                            <tr>
                                <td>{{ c.title }}</td>
                                <td><a href="{{ path('media', {'id' : c.id, 'media' : 'comics'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No comics found.</p>
                {% endif %}
            </article>
        </div>
    </section>

    <section id="musics-games">
        <div class="row">
            {# Musics article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Albums</h2>
                {% if musics|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for m in musics %}
                            <tr>
                                <td>{{ m.title }}</td>
                                <td><a href="{{ path('media', {'id' : m.id, 'media' : 'musics'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No albums found.</p>
                {% endif %}
            </article>

            {# Video games article #}
            <article class="col-md-6 col-sm-12 col-xs-12">
                <h2>Last Video Games</h2>
                {% if video_games|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for v in video_games %}
                            <tr>
                                <td>{{ v.title }}</td>
                                <td><a href="{{ path('media', {'id' : v.id, 'media' : 'video-games'}) }}" ><button role="link" class="btn btn-primary btn-sm" value="Read more ...">Read more ...</button></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No video games found.</p>
                {% endif %}
            </article>
        </div>
    </section>
</section>
{% endblock %}
