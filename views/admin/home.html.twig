                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No books found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="comics">
                <h2>Last Comics</h2>
                {% if comics|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for c in comics %}
                            <tr>
                                <td>{{ c.title }}</td>
                                <td>
                                    <a href="{{ path('edit-media', {'id' : c.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : c.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No comics found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="musics">
                <h2>Last Albums</h2>
                {% if musics|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for m in musics %}
                            <tr>
                                <td>{{ m.title }}</td>
                                <td>
                                    <a href="{{ path('edit-media', {'id' : m.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : m.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No albums found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="games">
                <h2>Last Video Games</h2>
                {% if video_games|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for v in video_games %}
                            <tr>
                                <td>{{ v.title }}</td><td>
                                    <a href="{{ path('edit-media', {'id' : v.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : v.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No video games found.</p>
                {% endif %}
            </section>
        </div>
    </section>
{% endblock %}
