{% extends "layout.html.twig" %}

{# Keywords from meta 'keyword' #}
{% block keywords %}homepage, media, client, rest-client{% endblock %}

{# Title of the page present on head markup #}
{% block title %}Administration - Homepage{% endblock %}

{# Body of the page #}
{% block content %}
    <section class="col-md-12 col-sm-12 col-xs-12">
        <div>
            <ul class="nav nav-tabs nav-justified">
                <li class="active"><a href="#cartoons" data-toggle="tab">Cartoons</a></li>
                <li><a href="#movies" data-toggle="tab">Movies</a></li>
                <li><a href="#animes" data-toggle="tab">Animes</a></li>
                <li><a href="#series" data-toggle="tab">Series</a></li>
                <li><a href="#books"  data-toggle="tab">Books</a></li>
                <li><a href="#comics" data-toggle="tab">Comics</a></li>
                <li><a href="#musics" data-toggle="tab">Musics</a></li>
                <li><a href="#games"  data-toggle="tab">Video Game</a></li>
            </ul>
        </div>

        <div class="tab-content">
            <section class="tab-pane fade in active" id="cartoons">
                <h2>Last Cartoons</h2>
                {% if cartoons|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for c in cartoons %}
                            <tr>
                                <td>{{ c.title }}</td>
                                <td>
                                    <a href="{{ path('edit-media', {'id' : c.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : c.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No cartoons found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="movies">
                <h2>Last Movies</h2>
                {% if movies|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for m in movies %}
                            <tr>
                                <td>{{ m.title }}</td>
                                <td>
                                    <a href="{{ path('edit-media', {'id' : m.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : m.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No movies found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="animes">
                <h2>Last Animes</h2>
                {% if animes|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for a in animes %}
                            <tr>
                                {% if a.numberOfSeasons == 1 %}
                                    <td>{{ a.title }}</td>
                                {% else %}
                                    <td>{{ a.title }} - Season {{ a.currentSeason }}</td>
                                {% endif %}
                                <td>
                                    <a href="{{ path('edit-media', {'id' : a.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : a.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No animes found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="series">
                <h2>Last Series</h2>
                {% if series|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for s in series %}
                            <tr>
                                {% if s.numberOfSeasons == 1 %}
                                    <td>{{ s.title }}</td>
                                {% else %}
                                    <td>{{ s.title }} - Season {{ s.currentSeason }}</td>
                                {% endif %}
                                <td>
                                    <a href="{{ path('edit-media', {'id' : s.id }) }}">
                                        <button role="link" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
                                    </a>

                                    <a href="{{ path('remove-media', {'id' : s.id }) }}">
                                        <button role="link" class="btn btn-danger  btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    <p>No series found.</p>
                {% endif %}
            </section>

            <section class="tab-pane fade" id="books">
                <h2>Last Books</h2>
                {% if books|length > 0 %}
                    <table class="table table-striped table-hover">
                        {% for b in books %}
